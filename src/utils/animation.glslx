#include "../common/interface.glslx"

/* Staggered animation */
struct Animation {
    float time;
    float pow;
};

Animation animation = Animation(0., 0.);

void totalTime(in float t, in float offset) {
    animation.time = mod(u_time + offset, t);
}

void totalTime(in float t) {
    totalTime(t, 0.);
}

bool between(in float duration, in float offset)
{
    float p = (animation.time - offset) / duration;
    animation.pow = p;
    animation.time -= (duration + offset);
    return (p >= 0. && p <= 1.);
}

bool between(in float duration) { return between(duration, 0.); }
